@page
@model AdminLoginModel

@{
    ViewData["Title"] = "Log in";
}
    <div class="container" style="width:50vw !important;">
        <h1>@ViewData["Title"]</h1>
        <div class=" container row">
            <div >
                <section>
                    <form id="account" method="post">
                        <h4>Welcome Admin! Please log in to continue....</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input placeholder="E-mail" asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                            <div class=" form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Log in</button>
                            </div>
                            <div class=" form-group">
                                <hr />
                                <p class="logP">
                                    <a class="logP" asp-page="./AdminRegister" asp-route-returnUrl="@Model.ReturnUrl"><span>Register as a new user</span></a>
                                </p>
                            </div>
                    </form>
                </section>

            </div>
            
        </div>
    </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
